{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "stream",
    "globalEnv": ["DATABASE_URL", "JWT_SECRET", "NODE_ENV", "PORT", "PROXY_SECRET"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**", "api/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
