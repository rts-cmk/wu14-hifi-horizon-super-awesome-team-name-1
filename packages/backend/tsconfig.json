{
    "compilerOptions": {
        "target": "ESNext",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": ["bun"],
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
